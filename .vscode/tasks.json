{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/cmake-build-debug"
            },
            "command": "cmake",
            "args": [
                "-G",
                "Unix Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/cmake-build-debug"
            },
            "command": "make",
            "args": [
                "-j",
                "4"
            ],
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./run",
            "options": {
                "cwd": "${workspaceRoot}/cmake-build-debug"
            },
            "dependsOn": [
                "make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}